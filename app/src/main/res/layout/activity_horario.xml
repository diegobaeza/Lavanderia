<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisClaro">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/background_action_bar"
        android:id="@+id/toolbar"
        android:elevation="20dp"
        android:layout_centerHorizontal="true"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_logo"
            android:layout_gravity="center"/>



    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:text="@string/seleccione_horario"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <RadioGroup
        android:id="@+id/rgHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/rbHorario1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horario_1"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:buttonTint="@color/white"
            android:textSize="22sp"
            android:background="@drawable/background_degraded"/>

        <RadioButton
            android:id="@+id/rbHorario2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horario_2"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:buttonTint="@color/white"
            android:background="@drawable/background_degraded"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/rbHorario3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horario_3"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:buttonTint="@color/white"
            android:fontFamily="sans-serif"
            android:background="@drawable/background_degraded"
            android:textSize="22sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif"
        android:text="@string/continuar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgHorario" />


</android.support.constraint.ConstraintLayout>